{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/graph": ["src/"],
      "@/graph/*": ["src/*"],
    },
    "plugins": [{
      "transform": "@zerollup/ts-transform-paths",
      "exclude": ["*"]
      }],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2019", "es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}